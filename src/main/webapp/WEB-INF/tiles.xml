<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="admin.homepage"
		template="/WEB-INF/views/layouts/adminform.jsp">
		<put-attribute name="title" value="SHOESHI" />
		<put-attribute name="header"
			value="/WEB-INF/views/layout/header.jsp" />
	
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/views/layout/footer.jsp" />
	</definition>

	<definition name="user.homepage"
		template="/WEB-INF/views/layout/layout.jsp">
		<put-attribute name="title" value="SHOESHI" />
		<put-attribute name="header"
			value="/WEB-INF/views/layout/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/views/layout/footer.jsp" />
	</definition>

	<definition name="WILDCARD:admin/*/*"
		extends="admin.homepage">
		<put-attribute name="body"
			value="/WEB-INF/views/{1}/{2}.jsp" />

	</definition>

	<definition name="WILDCARD:*/*" extends="user.homepage">
		<put-attribute name="body"
			value="/WEB-INF/views/{1}/{2}.jsp" />

	</definition>
</tiles-definitions>